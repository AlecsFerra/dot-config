{
	"snippets.ultisnips.directories": [
		"UltiSnips",
		"~/.config/nvim/snippets"
	],
  "languageserver":{
    "haskell": {
      "command": "stack",
      "args": ["exec", "haskell-language-server-wrapper", "--", "--lsp"],
      "rootPatterns": [
       ".stack.yaml",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ],
      "initializationOptions": {
        "languageServerHaskell": {}
      }
    }
  }
}
