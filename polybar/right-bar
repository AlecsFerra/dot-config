[module/date]
type = internal/date
interval = 1.0

date = %H:%M
date-alt = %Y-%m-%d %a

format = <label>
label = %date%
label-margin = 1

[module/notifications]
type = custom/script
exec = $HOME/.config/polybar/scripts/notifications.sh

click-left = kill -s USR1 $(pidof deadd-notification-center)
click-right = dnd.sh &
interval = 5

