@theme "~/.cache/wal/rofi.rasi"

configuration {
  show-icons:     true;
	icon-theme:     "Flat Remix";
	hide-scrollbar: true;
	sidebar-mode: 	false;
}

mainbon {
  children: [ inputbar, listview, mode-switcher ];
}

inputbar {
  children: [ entry, num-rows, num-filtered-rows ];
}

listview {
  children: [ element ];
}

* {
  background-color: @background;
  color:            @foreground;
}
