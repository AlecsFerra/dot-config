# vim: filetype=sh

# launcher
 
super + Return
    alacritty

super + d ; d
    rofi -show drun -modi "drun" -config $HOME/.config/rofi/launcher/config.rasi

super + d ; w
    firefox

super + d ; z
    $TERMINAL -e zsh -ic ranger

super + d ; t
		telegram-desktop

super + d ; p
		pavucontrol

super + d ; x
		xournalpp

super + d ; b
		bitwarden

{_, shift} + Print
    flameshot {gui, full} -p $HOME/Pictures/Screenshots/}

super + e
    $HOME/.config/rofi/emoji/emoji-selector.sh

super + shift + m
    $HOME/.config/scripts/monitor.sh && $HOME/.config/polybar/start.sh

super + n
    kill -s USR1 $(pidof deadd-notification-center)

super + shift + n
    dnd.sh

super + shift + x
    xset dpms force suspend

super + Right
    .config/scripts/spoty_command.sh next

super + Left
    .config/scripts/spoty_command.sh previus

super + Up
    .config/scripts/spoty_command.sh playpause

super + c ; x
	wacom.sh xournal

super + c ; w
    xwacomcalibrate && \
        notify-send -a Wacom "Wacom Calibrate" \
                    "Calibrated to match the current window" \
                    -i pencil

super + c ; {s, a}
    xwacomcalibrate -f {eDP-1, HDMI-1} && notify-send -a Wacom "Wacom Calibrate" \
                    "Calibrated to match the screen" \
                    -i pencil

XF86AudioMute
    pamixer -t

XF86AudioRaiseVolume
    pamixer -i 5 #--allow-boost

XF86AudioLowerVolume
    pamixer -d 5 #--allow-boost

XF86MonBrightnessUp
    xbacklight -inc 5

XF86MonBrightnessDown
    xbacklight -dec 5
