# vim: filetype=sh

super + {_, shift} + Return
    $TERMINAL { , --class dropdown_terminal}

super + w
    firefox

super + w + shift
    tor-browser

{_, shift} + Print
    flameshot {gui, full} -p $HOME/Pictures/Screenshots/}

super + d
    rofi -show drun -modi "drun" -config $HOME/.config/rofi/launcher/config.rasi

super + e
    $HOME/.config/rofi/emoji/emoji-selector.sh

super + g
    $HOME/.config/rofi/search/search.sh

super + m
    $HOME/.config/scripts/monitor.sh && $HOME/.config/polybar/start.sh

super + n
    kill -s USR1 $(pidof deadd-notification-center)

super + shift + f
    $TERMINAL -e zsh -ic ranger

super + shift + x
    sleep 1 && xset dpms force suspend

super + Right
    .config/scripts/spoty_command.sh next

super + Left
    .config/scripts/spoty_command.sh previus

super + Up
    .config/scripts/spoty_command.sh playpause

XF86AudioMute
    pavolume mutetoggle --noshow

XF86AudioRaiseVolume
    pavolume volup 5 --noshow

XF86AudioLowerVolume
    pavolume voldown 5 --noshow

XF86MonBrightnessUp
    xbacklight -inc 5

XF86MonBrightnessDown
    xbacklight -dec 5

## BSPWM specific ##
super + {_,shift} + q
    bspc node -{c,k}

super + {_,shift} + {h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

super + alt + {h,j,k,l}
    bspc node -z {right,bottom,top,left} 10 10

super + ctrl + {h,j,k,l,space}
    bspc node -p {west,south,north,east,cancel}

super + {_,shift} + {1-9,0}
    bspc {desktop, node -d} '^{1-9,10}' -f

super + {t, s, f}
    bspc node -t {tiled, floating, fullscreen}

super + shift + t
    bspc node -t pseudo_tiled

