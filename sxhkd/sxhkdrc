# vim: filetype=sh

# Launch Commands

super + Return
    alacritty

super + d ;
    $HOME/.config/rofi/launcher/run.sh

super + T ;
    $HOME/.config/eww/bar/tray.sh

super + D ; w
    librewolf

super + D ; W
    tor-browser

super + D ; z
    $TERMINAL -e zsh -ic ranger

super + D ; T
		tex-match

super + D ; p
		pavucontrol

super + D ; x
		xournalpp

super + D ; b
		bitwarden-desktop

super + D ; t
		$HOME/.config/rofi/bt/run.sh

super + b
    $HOME/.config/rofi/bw/run.sh

super + e
     espanso service start --unmanaged \
  || espanso service stop \
  && notify-send "Espanso" "Stopping espanso" \
       --app-name "espanso"


# Notifications
super + n
    kill -s USR1 $(pidof deadd-notification-center)

super + shift + n
    dnd.sh

# System stuff 
super + x ; x
    xset dpms force suspend

super + x ; r
    $HOME/.config/scripts/xmonadr.sh

super + x ; q
    killall xmonad-x86_64-linux

super + x ; s
    reboot

super + x ; S
    poweroff

# Spotify
super + Right
    .config/scripts/music_command.sh next

super + Left
    .config/scripts/music_command.sh previus

super + Up
    .config/scripts/music_command.sh playpause

# Wacom Command
super + c ; x
	wacom.sh xournal

super + c ; w
    xwacomcalibrate && \
        notify-send -a Wacom "Wacom Calibrate" \
                    "Calibrated to match the current window" \
                    -i pencil

super + c ; {s, a}
    xwacomcalibrate -f {eDP-1, HDMI-1} && notify-send -a Wacom "Wacom Calibrate" \
                    "Calibrated to match the screen" \
                    -i pencil
# Misc stuff
{_, shift} + Print
    flameshot {gui, full}

XF86AudioMute
    pamixer -t

XF86AudioRaiseVolume
    pamixer -i 5 #--allow-boost

XF86AudioLowerVolume
    pamixer -d 5 #--allow-boost

XF86MonBrightnessUp
    xbacklight -inc 5

XF86MonBrightnessDown
    xbacklight -dec 5
